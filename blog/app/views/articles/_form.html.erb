<%= form_with model: @article, :html => {:class => "form-horizontal center"}, local: true do |form| %>
    
    <%# Check for errors and display if present %>
    <% if @article.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@article.errors.count, "error") %>
                prohibited this article from being saved:
            </h2>
            <ul>
                <% @article.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <%# Begin Form %>
    <div class="form-group">
        <%= form.label :title, class: "col-md-4 control-label" %><br>
        <%= form.text_field :title, class: "form-control" %>
    </p>

    <p>
        <%= form.label :text %><br>
        <%= form.text_area :text %>
    </p>

    <p>
        <%= form.submit %>
    <p/>
<% end %>